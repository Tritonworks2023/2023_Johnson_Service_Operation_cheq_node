doctype html
head
  meta(name='viewport' content='width=device-width, initial-scale=1')
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
  link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css')
  style.
    body{
    margin-top:20px;
    background:#eee;
    }
    .invoice {
    background: #fff;
    padding: 10px;
    }
    .invoice-company {
    font-size: 20px
    }
    .invoice-header {
    margin: 0 -20px;
    background: #ffffff;
    padding: 20px
    }
    .invoice-date,
    .invoice-from,
    .invoice-to {
    display: table-cell;
    width: 1%
    }
    .invoice-from,
    .invoice-to {
    padding-right: 20px
    }
    .invoice-date .date,
    .invoice-from strong,
    .invoice-to strong {
    font-size: 16px;
    font-weight: 600
    }
    .invoice-date {
    text-align: right;
    padding-left: 20px
    }
    .invoice-price {
    background: #ffffff;
    display: table;
    width: 100%
    }
    .invoice-price .invoice-price-left,
    .invoice-price .invoice-price-right {
    display: table-cell;
    padding: 10px;
    font-size: 15px;
    font-weight: 600;
    width: 75%;
    position: relative;
    }
    .invoice-price .invoice-price-left .sub-price {
    display: table-cell;
    padding: 0 20px
    }
    .invoice-price small {
    /* font-size: 12px; */
    font-weight: 400;
    display: block
    }
    .invoice-price .invoice-price-row {
    display: table;
    float: left
    }
    .invoice-price .invoice-price-right {
    width: 25%;
    background: white;
    color: black;
    text-align: right;
    vertical-align: bottom;
    font-weight: 300;
    }
    .invoice-price .invoice-price-right small {
    display: block;
    opacity: .6;
    position: absolute;
    top: 10px;
    left: 10px;
    /* font-size: 12px */
    }
    .invoice-footer {
    border-top: 1px solid #ddd;
    padding-top: 10px;
    font-size: 10px
    }
    .invoice-note {
    color: #999;
    font-size: 85%
    }
    .invoice>div:not(.invoice-footer) {
    margin-bottom: 20px
    }
    .btn.btn-white, .btn.btn-white.disabled, .btn.btn-white.disabled:focus, .btn.btn-white.disabled:hover, .btn.btn-white[disabled], .btn.btn-white[disabled]:focus, .btn.btn-white[disabled]:hover {
    color: #2d353c;
    background: #fff;
    border-color: #d9dfe3;
    }
    table {
    font-family: arial, sans-serif;
    border-collapse: collapse;
    width: 100%;
    }
    td, th {
    border: 1px solid #dddddd;
    text-align: left;
    }
    tr:nth-child(even) {
    background-color: #dddddd;
    }
.container
  .col-md-12(style='background: white;')
    .row
      div(style='text-align: center;background: white;')
        h3(style='margin: 0px;') Johnson Lifts Private Limited
        hr(style='width: 45%;')
        |              #{branch_name}
    br
    br
    .row
      .invoice-price
        .invoice-price-left(style='width: 50% !important;')
          | CLIENT NAME &amp; INSTALLATION ADDRESS:
          br
          br
          |                 #{customer_name}
          br
          |                 #{customer_address}
        .invoice-price-right(style='font-size: 20px;width: 50% !important;')
          span JOB NO : 
          | #{job_no}
          br
          br
          span(style='font-size: 15px;') Date : #{date_of_create}
          br
    .invoice
      .invoice-content
        .table-responsive
          table.table.table-invoice(style='width: 100%;font-size: 14px;')
            thead
              tr
                th(style='padding: 10px;') S.No
                th(style='padding: 10px;') TASK DESCRIPTION
                th.text-right(style='padding: 10px;' width='5%') STATUS
            tbody
            each n in datas
              tr
                td(style='padding: 10px;')
                  | = n.s_no
                td(style='padding: 10px;')
                  | = n.task
                td.text-center(style='padding: 10px;') = n.status
        br
        hr
        .invoice-price
          .invoice-price-left
            .invoice-price-row
              span REMARKS
              br
              p
                | #{remarks}
          .invoice-price-right(style='border: 1px black solid;')
            small Customer Signature
            img(src="" alt='Girl in a jacket' width='150' height='100')
            p
              | #{signed_by}
              br
              |  #{signed_role}
      .invoice-note
        | * Make all cheques payable to [Your Company Name]
        br
        |             * Payment is due within 30 days
        br
        |             * If you have any questions concerning this invoice, contact  [Name, Phone Number, Email]
      .invoice-footer
        p.text-center.m-b-5.f-w-600
          | THANK YOU FOR YOUR BUSINESS
        p.text-center
          span.m-r-10
            i.fa.fa-fw.fa-lg.fa-globe
            |  johnsonlift.com
          span.m-r-10
            i.fa.fa-fw.fa-lg.fa-phone-volume
            | +91-9514497862
          span.m-r-10
            i.fa.fa-fw.fa-lg.fa-envelope
            |  johnsonlift@gmail.com
